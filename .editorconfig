root = true

# Global defaults (fallback)
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = space
indent_size = 4
max_line_length = 120

# HTML
[*.html]
indent_style = space
indent_size = 2

# CSS, SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# JavaScript & JSX
[*.{js,jsx}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2
# Don't trim trailing whitespace in JSON (sometimes intentional)
trim_trailing_whitespace = false

# YAML / YML
[*.{yaml,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# SQL
[*.sql]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# NEON configuration files (.neon)
[*.neon]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# XML configuration files (.xml)
[*.xml]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
